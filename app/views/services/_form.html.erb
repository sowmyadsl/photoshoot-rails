<%= render "layouts/errors", :object => @service %>

<%= form_for @service do |f| %>
<div class="field">
    <%= f.label :name, "Name:", class: "col-md-3 control-label" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "Description:", class: "col-md-3 control-label" %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price, "Price:", class: "col-md-3 control-label" %>
    <%= f.text_field :price %>
  </div>
  <!--div class="form-group" -->
  <div class="field">
    <%= f.label :image, "Image:", class: "col-md-3 control-label" %>
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>

<% end %>
