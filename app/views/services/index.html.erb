<% if current_user %>
<div class= "col-md-12">
  <h4>Welcome <%=current_user.email %>! </h4>
    <p>Click on the image for more info on the package!</p>
</div>
<% end %>
<br>

<% if current_user.try(:admin?) %>
<div class= "col-md-12">
<p>Hello Admin,</p>
<p>Add a new service: </p>
  <button><%= link_to "New Service", new_service_path %></button>
</div>
<% end %>
<br>
<br>
<div class="row clearfix">
  <h2>Services Offered:</h2>
  <% @services.each do |service| %>
  <h3><%= service.name %></h3>
    <%= link_to service_path(service) do  %>
    <%= image_tag service.image(:medium) %>
     <% end %>
  <% end %>
</div>
