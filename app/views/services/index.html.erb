<div class="panel panel-default">
  <div class="panel-body">
    <% if current_user %>
    <h4>Welcome <%=current_user.email %>! </h4>
    <p>Click on the image for more info on the package!</p>
    <hr>
    <% end %>

    <br><% if current_user.try(:admin?) %>
    <div class= "col-md-12">
      <p>Hello Admin,</p>
      <p>Add a new service: </p>
      <button><%= link_to "New Service", new_service_path %></button>
    </div>
    <% end %>
    <div class="services">
      <h2>Services Offered:</h2>
      <% @services.each do |service| %>
      <div class='service-details'>
      <h3><%= service.name %></h3>
      <%= link_to service_path(service) do  %>
      <figure class="image">
        <%= image_tag service.image(:medium) %>
      </figure>
    </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
