<h1>Services Offered:</h1>

<% if current_user.try(:admin?) %>
<p>Hello Admin,</p>
<p>Add a new service: </p>
  <button><%= link_to "New Service", new_service_path %></button>
<% end %>

<div class="flex-box">
  <% @services.each do |service| %>
  <h1><%= service.name %></h1>
    <%= link_to service_path(service) do  %>
     <%=image_tag service.image%>
  <% end %>
  <% end %>
</div>
